<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="MauiCollectionNavSample.Views.DetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MauiCollectionNavSample.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:DetailViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">
        <Button 
            Text="Back"
            Clicked="OnBackClicked"
            HorizontalOptions="Start"
            />
        <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold"/>
        <Label Text="{Binding Description}" FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>
